
{% extends 'base.html.twig' %}


{% block body %}

    <div class="container">



        <form class="form-signin" role="form" method="POST" action="{{ path('security_login_check') }}">

            <h2 class="form-signin-heading">{{ 'security.login.title'|trans }}</h2>

            {% if error %}
                <div class="alert alert-danger">
                    {{ error.messageKey|trans(error.messageData) }}
                </div>
            {% endif %}

            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="email" id="email" class="form-control" placeholder="Email address" required="" autofocus="" value="{{ last_username }}" name="_email">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="" name="_password">
            <div class="checkbox">
                <label>
                    <input type="checkbox" value="remember-me">{{ 'security.login.rememberme'|trans }}
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">{{ 'security.login.submit'|trans }}</button>
        </form>

    </div>
{% endblock %}